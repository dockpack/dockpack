{
  "push": {
    "name": "dockpack/centos6"
  },
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "override": {
        "virtualbox-iso": {
          "scripts": [
            "scripts/virtualbox.sh",
            "scripts/ansible-centos.sh"
          ]
        },
        "vmware-iso": {
          "scripts": [
            "scripts/vmware.sh",
            "scripts/ansible-centos.sh"
          ]
        }
      }
    },
    {
      "type": "ansible-local",
      "playbook_file": "ansible/rhel6.yml",
      "role_paths": [
        "ansible/roles/bbaassssiiee.commoncentos",
        "ansible/roles/RHEL6-STIG"
      ]
    },
    {
      "type": "shell",
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "script": "scripts/cleanup.sh"
    }
  ],
  "builders": [
    {
      "type": "virtualbox-iso",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/centos-6.6-x86_64-noX.cfg<enter><wait>"
      ],
      "guest_os_type": "RedHat_64",
      "headless": false,
      "http_directory": "kickstart",
      "iso_urls": [
        "file:///tmp/CentOS-6.6-x86_64-netinstall.iso",
        "http://www.mirrorservice.org/sites/mirror.centos.org/6/isos/x86_64/CentOS-6.6-x86_64-netinstall.iso"
      ],
      "iso_checksum_type": "md5",
      "iso_checksum": "2342bc5ea72fc028972aa0f21cee28b4",
      "shutdown_command": "echo 'vagrant' | sudo -S /sbin/shutdown -h 0",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_wait_timeout": "20m",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "virtualbox_version_file": ".vbox_version",
      "vm_name": "centos6",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "512"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "2"
        ]
      ]
    },
    {
      "type": "vmware-iso",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/centos-6.6-x86_64-noX.cfg<enter><wait>"
      ],
      "boot_wait": "20s",
      "guest_os_type": "centos-64",
      "headless": false,
      "http_directory": "kickstart",
      "iso_urls": [
        "file:///tmp/CentOS-6.6-x86_64-netinstall.iso",
        "http://www.mirrorservice.org/sites/mirror.centos.org/6/isos/x86_64/CentOS-6.6-x86_64-netinstall.iso"
      ],
      "iso_checksum_type": "md5",
      "iso_checksum": "2342bc5ea72fc028972aa0f21cee28b4",
      "shutdown_command": "echo 'vagrant' | sudo -S /sbin/shutdown -h 0",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_wait_timeout": "20m",
      "tools_upload_flavor": "linux",
      "vm_name": "centos6",
      "vmx_data": {
        "cpuid.coresPerSocket": "1",
        "memsize": "512",
        "numvcpus": "2"
      }
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "keep_input_artifact": false,
      "output": "packer/{{.Provider}}-centos6.box"
    }
  ]
}

