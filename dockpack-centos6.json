{
  "builders": [
    {
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/centos-6.10-x86_64-noX.cfg<enter><wait>"
      ],
      "guest_additions_mode": "upload",
      "guest_additions_path": "VBoxGuestAdditions.iso",
      "guest_os_type": "RedHat_64",
      "headless": false,
      "http_directory": "kickstart",
      "iso_checksum": "56f7b078a3b443095ba006cdc85319c691251cda98c5d73d12ef6db7aff6b4c1",
      "iso_checksum_type": "sha256",
      "iso_urls": [
        "file:///Users/Shared/CentOS-6.10-x86_64-netinstall.iso",
        "http://www.mirrorservice.org/sites/mirror.centos.org/6/isos/x86_64/CentOS-6.10-x86_64-netinstall.iso"
      ],
      "shutdown_command": "echo 'vagrant' | sudo -S /sbin/shutdown -h 0",
      "ssh_password": "vagrant",
      "ssh_username": "root",
      "ssh_wait_timeout": "20m",
      "type": "virtualbox-iso",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "512"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "2"
        ]
      ],
      "virtualbox_version_file": ".vbox_version",
      "vm_name": "centos6"
    },
    {
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/centos-6.10-x86_64-noX.cfg<enter><wait>"
      ],
      "boot_wait": "30s",
      "guest_os_type": "Centos-64",
      "headless": false,
      "http_directory": "kickstart",
      "iso_checksum": "56f7b078a3b443095ba006cdc85319c691251cda98c5d73d12ef6db7aff6b4c1",
      "iso_checksum_type": "sha256",
      "iso_urls": [
        "file:///Users/Shared/CentOS-6.10-x86_64-netinstall.iso",
        "http://www.mirrorservice.org/sites/mirror.centos.org/6/isos/x86_64/CentOS-6.10-x86_64-netinstall.iso"
      ],
      "shutdown_command": "echo 'vagrant' | sudo -S /sbin/shutdown -h 0",
      "ssh_password": "vagrant",
      "ssh_username": "root",
      "ssh_wait_timeout": "10000s",
      "tools_upload_flavor": "linux",
      "type": "vmware-iso",
      "vm_name": "centos6",
      "vmx_data": {
        "cpuid.coresPerSocket": "1",
        "memsize": "512",
        "numvcpus": "2"
      }
    },
    {
      "access_key": "{{user `aws_access_key`}}",
      "ami_name": "amazon-ebs-centos-box {{timestamp}}",
      "instance_type": "t2.micro",
      "region": "eu-central-1",
      "secret_key": "{{user `aws_secret_key`}}",
      "source_ami": "ami-650dea0a",
      "ssh_port": 22,
      "ssh_timeout": "10000s",
      "ssh_username": "root",
      "type": "amazon-ebs"
    }
  ],
  "post-processors": [
    {
      "keep_input_artifact": false,
      "output": "packer/{{.Provider}}-centos6.box",
      "type": "vagrant"
    }
  ],
  "provisioners": [
    {
      "destination": "/etc/ssh/ca_key.pub",
      "source": "pki/ca_key.pub",
      "type": "file"
    },
    {
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "override": {
        "amazon-ebs": {
          "scripts": [
            "scripts/ansible-centos.sh"
          ]
        },
        "virtualbox-iso": {
          "scripts": [
            "scripts/virtualbox.sh",
            "scripts/ansible-centos.sh"
          ]
        },
        "vmware-iso": {
          "scripts": [
            "scripts/vmware.sh",
            "scripts/ansible-centos.sh"
          ]
        }
      },
      "type": "shell"
    },
    {
      "extra_arguments": [
        "-vv"
      ],
      "playbook_file": "ansible/rhel6.yml",
      "role_paths": [
        "ansible/roles/loghost",
        "ansible/roles/RHEL6-STIG"
      ],
      "type": "ansible-local"
    },
    {
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "script": "scripts/cleanup.sh",
      "type": "shell"
    }
  ],
  "push": {
    "name": "dockpack/centos6"
  }
}
