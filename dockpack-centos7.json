      ],
      "output_directory": "output-virtualbox-iso",
      "vm_name": "centos7",
      "ssh_username": "root",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo 'vagrant' | sudo -S /sbin/shutdown -h 0",
      "guest_additions_path": "VBoxGuestAdditions.iso",
      "virtualbox_version_file": ".vbox_version",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "2048"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "1"
        ]
      ]
    }, {
      "type": "vmware-iso",
      "headless": false,
      "boot_command": [
        "<tab> append initrd=initrd.img inst.text inst.ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/centos-7.4-x86_64-noX.cfg<enter><wait>"
      ],
      "boot_wait": "30s",
      "guest_os_type": "Centos-64",
      "http_directory": "kickstart",
  		"iso_checksum": "bba314624956961a2ea31dd460cd860a77911c1e0a56e4820a12b9c5dad363f5",
      "iso_checksum_type": "sha256",
      "iso_urls": [ "file:///Users/Shared/CentOS-7-x86_64-Minimal-1708.iso",
                 "http://mirror.nl.leaseweb.net/centos/7/isos/x86_64/CentOS-7-x86_64-Minimal-1708.iso"
      ],
      "output_directory": "output-virtualbox-iso",
      "ssh_username": "root",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo 'vagrant' | sudo -S /sbin/shutdown -h 0",
      "type": "vmware-iso",
      "tools_upload_flavor": "linux",
      "vm_name": "centos7",
      "vmdk_name": "centos7",
      "vmx_data": {
        "cpuid.coresPerSocket": "1",
        "memsize": "1024",
        "numvcpus": "1"
      }
    }
  ],
  "post-processors": [{
    "type": "vagrant",
    "compression_level": 9,
    "override": {
        "vmware": {
          "compression_level": 5
        }
    },
    "keep_input_artifact": false,
    "output": "packer/{{.Provider}}-centos74.box"
  }]
